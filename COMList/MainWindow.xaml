<Window x:Class="COMList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMList"
        mc:Ignorable="d"
        Title="COMList by Dirk Schramm" Height="200" Width="400" Icon="Fatcow-Farm-Fresh-Port.ico" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBar>
            <ToggleButton x:Name="ButtonAlwaysOnTop" Height="22" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="ButtonAlwaysOnTop_Checked" Unchecked="ButtonAlwaysOnTop_Unchecked">
                <Image x:Name="ImagePin" Source="Resources/Unpin.png"/>
            </ToggleButton>
        </ToolBar>

        <ListBox x:Name="ListBoxCOMPorts" Grid.Row="1"/>
    </Grid>
</Window>
